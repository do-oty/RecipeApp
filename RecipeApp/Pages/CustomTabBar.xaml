<?xml version="1.0" encoding="UTF-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeApp.Controls.CustomTabBar"
             BackgroundColor="#D98236">

    <Grid ColumnDefinitions="*,*,*,*"
          HeightRequest="70"
          Padding="0,0,0,10">
        <Grid Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center">
            <ImageButton Source="home.svg"
                         Padding="15"
                         Command="{Binding NavigateCommand}"
                         CommandParameter="HomePage"
                         BackgroundColor="Transparent"
                         HorizontalOptions="Center"
                         VerticalOptions="Center" />
            <Label Text="Home" 
                   FontSize="12" 
                   TextColor="White" 
                   HorizontalOptions="Center" 
                   VerticalOptions="End" />
        </Grid>
        <Grid Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
            <ImageButton Source="explore.svg"
                         Padding="15"
                         Command="{Binding NavigateCommand}"
                         CommandParameter="ExplorePage"
                         BackgroundColor="Transparent"
                         HorizontalOptions="Center"
                         VerticalOptions="Center" />
            <Label Text="Explore" 
                   FontSize="12" 
                   TextColor="White" 
                   HorizontalOptions="Center" 
                   VerticalOptions="End" />
        </Grid>
        <Grid Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center">
            <ImageButton Source="favorite.svg"
                         Padding="15"
                         Command="{Binding NavigateCommand}"
                         CommandParameter="FavoritesPage"
                         BackgroundColor="Transparent"
                         HorizontalOptions="Center"
                         VerticalOptions="Center" />
            <Label Text="Favorites" 
                   FontSize="12" 
                   TextColor="White" 
                   HorizontalOptions="Center" 
                   VerticalOptions="End" />
        </Grid>
        <Grid Grid.Column="3" HorizontalOptions="Center" VerticalOptions="Center">
            <ImageButton Source="user.svg"
                         Padding="15"
                         Command="{Binding NavigateCommand}"
                         CommandParameter="ProfilePage"
                         BackgroundColor="Transparent"
                         HorizontalOptions="Center"
                         VerticalOptions="Center" />
            <Label Text="Profile" 
                   FontSize="12" 
                   TextColor="White" 
                   HorizontalOptions="Center" 
                   VerticalOptions="End" />
        </Grid>
    </Grid>
</ContentView>